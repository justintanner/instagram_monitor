# Instagram Monitor Configuration
# Copy this file to .env.local and fill in your values
# All values are optional - defaults are provided

# =============================================================================
# SESSION LOGIN (Mode 2)
# =============================================================================
# Session login is required for some features such as retrieving followers/followings
# or detailed posts/reels/stories info. The tool works without login (mode 1) but limited.

# Instagram username for session login
SESSION_USERNAME=

# Instagram password - can also use Firefox session import instead
# Run: python start.py --import-firefox-session
SESSION_PASSWORD=

# =============================================================================
# EMAIL NOTIFICATIONS (SMTP)
# =============================================================================
# Configure SMTP to receive email notifications for profile changes

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SSL=true
SENDER_EMAIL=
RECEIVER_EMAIL=

# =============================================================================
# X/TWITTER NOTIFICATIONS
# =============================================================================
# Post follow/unfollow events to X/Twitter
# Get credentials from https://developer.twitter.com/

X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Send email on new post/reel/story, bio change, new follow, profile pic or visibility change
STATUS_NOTIFICATION=false

# Send email on new followers (only if STATUS_NOTIFICATION is true)
FOLLOWERS_NOTIFICATION=false

# Send email on errors
ERROR_NOTIFICATION=true

# Post to X on follow/unfollow events (only if STATUS_NOTIFICATION is true)
X_NOTIFICATION=false

# =============================================================================
# TIMING & INTERVALS
# =============================================================================

# How often to check for user activity (seconds)
CHECK_INTERVAL=5400

# Randomize interval to avoid detection: final = CHECK_INTERVAL +/- RANDOM_SLEEP_DIFF
RANDOM_SLEEP_DIFF_LOW=900
RANDOM_SLEEP_DIFF_HIGH=180

# How often to print liveness check message (seconds, 0 to disable)
LIVENESS_CHECK_INTERVAL=43200

# Delay between operations to avoid detection (seconds)
NEXT_OPERATION_DELAY=0.7

# =============================================================================
# TIMEZONE
# =============================================================================

# Your local timezone for timestamp conversion (e.g. 'Europe/Warsaw', 'America/New_York')
# Set to 'Auto' for automatic detection (requires tzlocal)
# List all: python3 -c "import pytz; print('\n'.join(pytz.all_timezones))"
LOCAL_TIMEZONE=Auto

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Detect profile picture changes (binary comparison)
DETECT_CHANGED_PROFILE_PIC=true

# Skip session login (use anonymous mode 1)
SKIP_SESSION=false

# Skip fetching followers list (default: true - followers not fetched)
SKIP_FOLLOWERS=true

# Skip fetching followings list (default: false - followings ARE fetched)
SKIP_FOLLOWINGS=false

# Skip fetching detailed story info
SKIP_GETTING_STORY_DETAILS=false

# Skip fetching detailed post/reel info
SKIP_GETTING_POSTS_DETAILS=false

# Fetch extra post details (comments and likes)
GET_MORE_POST_DETAILS=false

# =============================================================================
# ANTI-BOT / HUMAN SIMULATION
# =============================================================================

# Simulate human behavior with random actions
BE_HUMAN=false

# Approximate number of simulated human actions per 24 hours
DAILY_HUMAN_HITS=5

# Hashtags to browse during human simulation (comma-separated)
MY_HASHTAGS=travel,food,nature

# Verbose output during human simulation
BE_HUMAN_VERBOSE=false

# Enable HTTP jitter and back-off wrapper
ENABLE_JITTER=false

# Verbose output for jitter wrapper
JITTER_VERBOSE=false

# =============================================================================
# USER AGENTS
# =============================================================================

# Web browser user agent (leave empty to auto-generate)
# For Firefox session import, match your Firefox user agent
USER_AGENT=

# Mobile device user agent (leave empty to auto-generate)
USER_AGENT_MOBILE=

# =============================================================================
# POST CHECKING HOURS
# =============================================================================

# Limit post/reel checking to specific hours
CHECK_POSTS_IN_HOURS_RANGE=false

# First range (e.g., 00:00 to 04:59)
MIN_H1=0
MAX_H1=4

# Second range (e.g., 11:00 to 23:59)
MIN_H2=11
MAX_H2=23

# =============================================================================
# LOGGING & OUTPUT
# =============================================================================

# Disable logging to file
DISABLE_LOGGING=false

# CSV file for activity logging (leave empty to disable)
CSV_FILE=

# Width of horizontal line in output
HORIZONTAL_LINE=113

# Clear terminal screen on start
CLEAR_SCREEN=true

# =============================================================================
# SIGNAL HANDLER SETTINGS
# =============================================================================

# Value to increase/decrease check interval via signals (seconds)
CHECK_SIGNAL_VALUE=300

# =============================================================================
# NETWORK SETTINGS
# =============================================================================

# URL to verify internet connectivity
CHECK_INTERNET_URL=https://www.instagram.com/

# Timeout for connectivity check (seconds)
CHECK_INTERNET_TIMEOUT=5

# =============================================================================
# PATHS
# =============================================================================

# Path to imgcat binary for terminal image display (leave empty to disable)
IMGCAT_PATH=imgcat

# Empty profile picture template file
PROFILE_PIC_FILE_EMPTY=

# Firefox cookie paths (auto-detected by OS if empty)
FIREFOX_MACOS_COOKIE=
FIREFOX_WINDOWS_COOKIE=
FIREFOX_LINUX_COOKIE=
